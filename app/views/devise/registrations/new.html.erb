  <div class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-8 col-lg-4">
      <div class="form-login">
        <h2><%= image_tag "logo-sloop.png", height: 30, width: 30, alt: "Logo" %> BlablaSloop</h1>
          <h2>S'inscrire</h2>
            <%= devise_error_messages! %>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: "Adresse e-mail",
                        required: true,
                        autofocus: true,
                        placeholder: "E-mail",
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        placeholder: "Mot de passe",
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: "Répéter le mot de passe",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :first_name, label: "Prénom",
                        required: true,
                        placeholder: "Prénom",
                        input_html: { autocomplete: "prenom" } %>
            <%= f.input :last_name, label: "Nom",
                        required: true,
                        placeholder: "Nom",
                        input_html: { autocomplete: "nom" } %>
            <%= f.input :age, label: "Âge",
                        required: true,
                        placeholder: "Âge",
                        input_html: { autocomplete: "age" } %>
            <%= f.input :phone_number, label: "Numéro de téléphone",
                        required: true,
                        placeholder: "Numéro de téléphone",
                        hint: ("#{@minimum_phone_number_length} chiffres minimum" if @minimum_phone_number_length),
                        input_html: { autocomplete: "telephone" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class:"btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
